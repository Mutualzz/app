{
    "$schema": "https://schema.tauri.app/config/2",
    "app": {
        "security": {
            "csp": null
        },
        "windows": [
            {
                "height": 600,
                "maximized": true,
                "minHeight": 600,
                "minWidth": 800,
                "title": "Mutualzz",
                "width": 800
            }
        ]
    },
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm vite:dev",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "bundle": {
        "active": true,
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "targets": "all"
    },
    "identifier": "com.mutualzz.app",
    "productName": "Mutualzz",
    "version": "1.0.0"
}
