{
    "$schema": "https://schema.tauri.app/config/2",
    "app": {
        "windows": [
            {
                "center": true,
                "decorations": false,
                "dragDropEnabled": true,
                "fullscreen": false,
                "height": 768,
                "label": "main",
                "maximized": true,
                "minHeight": 768,
                "minWidth": 1024,
                "resizable": true,
                "title": "",
                "titleBarStyle": "Overlay",
                "visible": true,
                "width": 1024
            }
        ],
        "withGlobalTauri": true
    },
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm vite:dev",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist/client"
    },
    "bundle": {
        "active": true,
        "category": "SocialNetworking",
        "createUpdaterArtifacts": true,
        "icon": [
            "icons/base/128x128.png",
            "icons/base/128x128@2x.png",
            "icons/base/22x22.png",
            "icons/base/24x24.png",
            "icons/base/32x32.png",
            "icons/base/44x44.png",
            "icons/base/48x48.png",
            "icons/base/64x64.png",
            "icons/base/icon.icns",
            "icons/base/icon.ico",
            "icons/base/icon.png",
            "icons/base/Square107x107Logo.png",
            "icons/base/Square142x142Logo.png",
            "icons/base/Square150x150Logo.png",
            "icons/base/Square284x284Logo.png",
            "icons/base/Square30x30Logo.png",
            "icons/base/Square310x310Logo.png",
            "icons/base/Square44x44Logo.png",
            "icons/base/Square71x71Logo.png",
            "icons/base/Square89x89Logo.png",
            "icons/adaptive/128x128.png",
            "icons/adaptive/128x128@2x.png",
            "icons/adaptive/22x22.png",
            "icons/adaptive/24x24.png",
            "icons/adaptive/32x32.png",
            "icons/adaptive/44x44.png",
            "icons/adaptive/48x48.png",
            "icons/adaptive/64x64.png",
            "icons/adaptive/icon.icns",
            "icons/adaptive/icon.ico",
            "icons/adaptive/icon.png",
            "icons/adaptive/Square107x107Logo.png",
            "icons/adaptive/Square142x142Logo.png",
            "icons/adaptive/Square150x150Logo.png",
            "icons/adaptive/Square284x284Logo.png",
            "icons/adaptive/Square30x30Logo.png",
            "icons/adaptive/Square310x310Logo.png",
            "icons/adaptive/Square44x44Logo.png",
            "icons/adaptive/Square71x71Logo.png",
            "icons/adaptive/Square89x89Logo.png",
            "icons/adaptive/StoreLogo.png"
        ],
        "publisher": "Mutualzz",
        "resources": ["icons/**/*", "./version.json"],
        "shortDescription": "Mutualzz is a social media platform that connects people with similar interests.",
        "targets": ["deb", "rpm", "appimage", "nsis", "app", "dmg"],
        "windows": {
            "nsis": {
                "installerIcon": "icons/base/icon.ico"
            }
        }
    },
    "identifier": "com.mutualzz.app",
    "plugins": {
        "deep-link": {
            "desktop": {
                "schemes": ["mutualzz"]
            }
        },
        "updater": {
            "active": "true",
            "endpoints": [
