{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "windows": [
      {
        "center": true,
        "decorations": false,
        "dragDropEnabled": true,
        "fullscreen": false,
        "height": 768,
        "label": "main",
        "maximized": true,
        "minHeight": 768,
        "minWidth": 1024,
        "resizable": true,
        "title": "",
        "titleBarStyle": "Overlay",
        "visible": true,
        "width": 1024
      }
    ],
    "withGlobalTauri": true
  },
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm vite:dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist/client"
  },
  "bundle": {
    "active": true,
    "category": "SocialNetworking",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/dark/128x128.png",
      "icons/dark/128x128@2x.png",
      "icons/dark/22x22.png",
      "icons/dark/24x24.png",
      "icons/dark/32x32.png",
      "icons/dark/44x44.png",
      "icons/dark/48x48.png",
      "icons/dark/64x64.png",
      "icons/dark/icon.icns",
      "icons/dark/icon.ico",
      "icons/dark/icon.png",
      "icons/dark/Square107x107Logo.png",
      "icons/dark/Square142x142Logo.png",
      "icons/dark/Square150x150Logo.png",
      "icons/dark/Square284x284Logo.png",
      "icons/dark/Square30x30Logo.png",
      "icons/dark/Square310x310Logo.png",
      "icons/dark/Square44x44Logo.png",
      "icons/dark/Square71x71Logo.png",
      "icons/dark/Square89x89Logo.png",
      "icons/dark/StoreLogo.png"
    ],
    "publisher": "Mutualzz",
    "resources": [
      "icons/**/*"
    ],
    "shortDescription": "Mutualzz is a social media platform that connects people with similar interests.",
    "targets": [
      "deb",
      "rpm",
      "appimage",
      "nsis",
      "app",
      "dmg"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/dark/icon.ico"
      }
    }
  },
  "identifier": "com.mutualzz.app",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "mutualzz"
        ]
      }
    },
    "updater": {
      "active": "true",
      "endpoints": [
        "https://github.com/mutualzz/mutualzz/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlFNUEzOTMyNTFBMTY2RDQKUldUVVpxRlJNamxhbnZ2WmdIeGFKcGxkVXhuUFFVRXBDd0JPNVpNUDZkTDVJRCtPTlVqZDA5YUsK",
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "productName": "Mutualzz",
  "version": "./version.json"
}
